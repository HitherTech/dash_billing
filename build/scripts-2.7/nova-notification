"""Starter script for Nova Notification."""

import eventlet
eventlet.monkey_patch()

import gettext
import os
import sys

#TODO (nati) This is temporary for debugging
BASE_PATH = '/opt/stack/'
NOVA_PATH = BASE_PATH + 'nova/'
FLAG_FILE = NOVA_PATH + 'bin/nova.conf'
DASH = BASE_PATH + 'dash/'

sys.path += [
    NOVA_PATH,
    DASH + 'openstack-dashboard/dash_billing/',
    DASH + 'openstack-dashboard/',
    DASH + 'openstack-dashboard/dashboard/',
    DASH + 'django-openstack/'
]

gettext.install('nova', unicode=1)

from nova import flags
from nova import log as logging
from nova import service
from nova import utils
from billing import manager

flags.DEFINE_string('notification_manager',
                    'billing.manager.BillingManager',
                    'billing manager')

if __name__ == '__main__':
    utils.default_flagfile(FLAG_FILE)
    flags.FLAGS(sys.argv)
    logging.setup()
    utils.monkey_patch()
    server = service.Service.create(binary='nova-notification',periodic_interval=600)
    service.serve(server)
    service.wait()

